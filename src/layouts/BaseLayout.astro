---
import '../style/global.css';

interface Props {
	title?: string;
}

const { title = "文本计数 - 在线Token计数器与文本统计工具" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body>
		<slot />
	</body>
</html>
