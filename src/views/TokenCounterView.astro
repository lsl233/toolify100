---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import ModelTable from "@/components/ModelTable/index.tsx";
import TokenCounter from "@/components/TokenCounter/index.tsx";
---

<BaseLayout
  title="Free Token Calculate | Calculate AI Tokens Instantly"
  description="Calculate tokens for GPT, Claude, Llama, Deepseek, and more with our free AI token counter. No signup needed, instant results, and clear pricing tables for easy cost comparison."
>
  <div class="min-h-screen bg-stone-30 bg-muted">
    <Header />
    <div class="mb-8 text-center pt-8">
      <h1 class="text-3xl font-bold text-stone-800 mb-2">
        Free Token Calculate & Pricing Calculator
      </h1>
      <p class="text-stone-600">
        Instantly calculate token count and pricing for your text in AI models
        like GPT, Claude, Deepseek, and Llama. Simple, free, and no sign-up
        needed.
      </p>
    </div>
    <div class="container mx-auto px-4">
      <div class="mb-4">
        <TokenCounter client:load/>
      </div>
      <section class="mb-12">
        <!-- <h2 class="text-2xl font-bold text-stone-800 mb-4">Model Price</h2> -->
        <ModelTable client:load />
      </section>
    </div>
  </div>
</BaseLayout>
